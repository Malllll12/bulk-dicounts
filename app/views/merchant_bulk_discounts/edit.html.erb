<h1>Edit Discount</h1>

<%= form_with url: merchant_bulk_discount_path(@merchant.id, @bulk_discounts.id), method: :patch, local: true do |f| %>
  <%= f.label "name" %>
  <%= f.text_field :name, id: :name %>

  <%= f.label "percentage" %>
  <%= f.number_field :percentage, id: :percentage, value: @bulk_discounts.percentage %>

  <%= f.label "threshold" %>
  <%= f.number_field :threshold, id: :threshold, value: @bulk_discounts.threshold%>

  <%= f.submit "Update Discount" %>
<% end %>
